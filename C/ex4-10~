#include <stdio.h>

float result;

float average (float a, float b, float c, float d, float e);

int main(void)
{
	printf( "Enter 5 float numbers: ");
	scanf ( "%d%d%d%d%d", &a, &b, &c, &d, &e );
	
	float result = average(a, b, c, d, e);
	printf( "\n\nAverage = %d\n", result );
	
	return 0;

}

float average (float a, float b, float c, float d, float e){
 float avg;
 
 avg = (a + b + c + d + e)/5;
 
 return avg;

}


